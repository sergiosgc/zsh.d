alias dir="ls -lah --color"
alias gitlog="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(yellow)%cn%Creset %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit" 
alias ssh="TERM=xterm ssh"
alias tn="task unblocked limit:1"
alias ta="task add"
function td() {
    task $1 done
}
function tdep() {
    task $1 modify dep:$2
}
alias tl="task unblocked"


